doctype html
html
	head
		-var title = 'Blog App - Profile'
		include ./templates/head.pug
	body
		header
			include ./templates/nav.pug

		main
			div.container#profile
				if message
					div.row
						div.col.s12.m12.l12
							div.card-panel.card-less-padding.red.white-text
								p.card-error-margin #{message}
				div.row
					div.col.s12.m6.l6
						h5 Profile Settings
						table.account
							tbody
								tr
									td Username:
									td #{user.username}
								tr
									td Email:
									td #{user.email}
				div.row
					div.col.s12.m12.m12
						ul.collapsible
							li
								div.collapsible-header Change Password
								div.collapsible-body 
									form(class="collapsible-padding" method="post", action="/changepassword")
										div.row
											div.col.s12.m6.l6
												input(type="password" name="password" placeholder="Password" class="validate")
											div.col.s12.m6.l6
												input(type="password" name="password_check" placeholder="Repeat password" class="validate")
											div.col.s12.m12.l12
												button(type="submit" class="waves-effect waves-light btn orange") Change Password
							li
								div.collapsible-header Delete Account
								div.collapsible-body 
									form(class="collapsible-padding" method="post", action="/deleteaccount")
										span Deleting your account also means deleting all your posts and their comments. Are you sure?
										br
										button(type="submit" class="waves-effect waves-light btn orange") Yes


		include ./templates/footer.pug
		include ./templates/scripts.pug