doctype html
html
	head
		-var title = 'Blog App - Home'
		include ./templates/head.pug

	body
		header
			include ./templates/nav.pug

		main
			div.container
				table.striped.responsive-table
					thead
						tr
							th #
							th Username
							th Email
							th Total Posts
							th Latest Post Title
							th Latest Post Date
					tbody
						- var i = 1
						for user in users
							tr
								td #{i}
								td: a(href="/users/profile/?id="+ user.id) #{user.username}
								td #{user.email}
								td #{user.postCount}
								td: a(href="/post/?id="+ user.lastPostId) #{user.lastPostTitle}
								td #{user.lastPostDate}
								- i++

		include ./templates/footer.pug
		include ./templates/scripts.pug